generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_ggcat")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  password  String
  //actions   historicoStatusCDC[]
  createdAt DateTime @default(now())
}

model DiepService {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  description String
  service     String
  status      String
}

model historicoStatusCDC {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  //author       User           @relation(fields: [authorId], references: [id])
  //sigesp       controle_cadms @relation(fields: [sigespNumero], references: [sigesp])
  sigespNumero String
  authorId     String @db.ObjectId
  status       String
  description  String
}

model controle_cadms {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  sigesp        String @unique
  //status        historicoStatusCDC[]
  status        String
  cargo         String
  especialidade String
  carga_horaria Float
  unidade       String
}
